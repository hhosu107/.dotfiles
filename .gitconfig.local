# vim: ft=gitconfig noexpandtab sw=8
[user]
signingkey = REDACTED # paste your ssh public key here
# neovim
[core]
	editor = nvim

# git-delta
[core]
	pager = BAT_PAGER='less -+XF -SQc' delta

# Go private modules
[url "git@github.com:"]
  insteadOf = https://github.com/
